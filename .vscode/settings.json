{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.vscode": true,
    "**/*.pyc": true,
    "**/yarn.lock": true,
    "**/package-lock.json": true
  },
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "typescript"
  ],
  "eslint.options": {
    "configFile": ".eslintrc.js"
  }
}
{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "preserve",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowJs": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "@Src/*": [ "src/*" ],
      "@Utils/*": ["src/utils/*"],
      "@Comps/*": ["src/components/*"],
    }
  },
  "include": [ "src/**/*" ],
  "exclude": [
    "node_modules/**/*",
    "config/**/*",
    "dist/**/*"
  ]
}